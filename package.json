{
  "name": "funk",
  "displayName": "funk Programming Language",
  "description": "A functional programming language with mutations and operations",
  "author": "David Lindeque",
  "license": "MIT",
  "version": "1.0.0",
  "publisher": "David Lindeque",
  "categories": ["Programming Languages"],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage"
  ],
  "main": "./client/out/main",
  "contributes": {
    "configuration": {},
    "commands": [
      {
        "command": "funk.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ddlindeque/funk"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "clean": "./scripts/clean.sh",
    "rebuild": "npm run clean; npm run compile",
    "reset": "./scripts/reset.sh"
  },
  "devDependencies": {
    "@types/node": "^20.5.7",
    "typescript": "^5.2.2"
  }
}
